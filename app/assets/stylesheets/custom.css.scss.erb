@import "bootstrap";
@import "font.css.erb");

/* Variables */

$breBlueLighter: #b5dddf;
$breBlueLight: #7fabae;
$breBlue: #617f89;
$breBlueDark: #3a4a57;
$breBlueDarker: #252b37;

/* Universal */

body {
  background-color: $breBlueDarker;
  color: $breBlueLighter;
}

h1, h2, h3, h4, h5, h6 {
  color: $breBlueLighter;
}

/* Typography */

h1 {
  font-family: eb_garamondregular, serif;
  font-weight: bold;
  text-align: center;
  font-size: 4.5em;
}

h2, h3 {
  font-family: Futura, sans-serif;
  text-align: center;
  font-size: 2em;
  font-weight: bold;
}

h3 {
  font-size: 1.5em;
}

body {
  font-family: Futura, sans-serif;
  font-size: 1.5em;
  line-height: 1.5;
}
small {
  font-size: 0.5em;
}


/* Main Page Splash */

.jumbotron {
  background-color: $breBlue;
}

#myCarousel {
  margin: 0 0 0 0;
  padding: 0 0 0 0;
}

.item {
  min-height: 250px;
}

.carousel {
 // background: image_url("open-book.png") no-repeat center bottom;
  background-size: 100% auto;
}


/* Nav Bar */

.navbar-default {
  background-color: $breBlueDark;
  margin-bottom: 0;
}

/* Blog */

.panel {
  background-color: $breBlueDark;
  padding: 10px 10px 0 10px;
  zoom: 1; /* IE6&7 */
  footer {
    .byline {
      float: right;
    }
  }
  h3 {
    margin-top: 5px;
  }
}

/* Footer */

.footer {
  padding: 20px 20px;

}