<% form_for(@blogpost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<form class="form">

		<div class="form-group">
		<%= f.text_area :content, placeholder: "Compose new micropost..." %>
		</div>

		<div class="form-group">
		<%= f.submit "Post", class: "btn btn-lg btn-primary" %>
		</div>

	</form>
<% end %>