<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>
<% if current_user.admin? %>
	<div class="container">
		<%= render 'shared/blogpost_form' %>
	</div>
<% end %>

<% if @user.blogposts.count != 0 %>
<div class="container">
  <h3>Blogposts (<%= @user.blogposts.count %>)</h3>
  <ol class="microposts">
    <%= render @blogposts %>
  </ol>
  <%= will_paginate @blogposts, renderer: BootstrapPagination::Rails %>
</div>
<% end %>
